{
  "name": "@gavinhsmith/simpledatabase",
  "version": "1.1.1",
  "description": "A node module for creating/managing easy-access SQLite databases.",
  "type": "module",
  "main": "./dist/Database.js",
  "types": "./dist/Database.d.ts",
  "repository": "https://github.com/gavinhsmith/SimpleDatabase.git",
  "author": "gavinhsmith <me@gavinhsmith.com> (https://gavinhsmith.com)",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "clear": "rimraf ./dist",
    "build:ts": "tsc",
    "build": "npm-run-all clear build:ts",
    "test": "node ./dist/tests/test.js",
    "dev:build:ts": "tsc --watch",
    "dev:nodemon": "nodemon ./dist/tests/test.js",
    "dev:nodemon:src": "nodemon ./src/tests/test.ts",
    "dev:src": "npm-run-all dev:nodemon:src --print-label",
    "dev": "npm-run-all build --parallel dev:build:ts dev:nodemon --print-label"
  }
}
